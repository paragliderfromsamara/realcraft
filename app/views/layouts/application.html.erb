<!DOCTYPE html>
<html>
  <head>
    <title>REALCRAFT</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
      <div id = "header">
          <div class="title-bar" data-responsive-toggle="main-menu" data-hide-for="medium">
            <button class="menu-icon" type="button" data-toggle></button>
            <div class="title-bar-title">
                <div class="top-bar-left">
                <ul class = 'menu'>
                    <li>
                        <%= link_to image_tag("/files/white_logo.png", style: "height: 30px;").html_safe, root_path %>
                    </li>
                </ul>
                </div>
            </div>
          </div>
          <div class="top-bar" id = "main-menu" data-animate="hinge-in-from-top spin-out">
                <div class = "row float-center">
                  <ul class="menu">
                    <li class="medium-2 column top-bar-img hide-for-small-only" > 
                        <%= link_to image_tag("/files/white_logo.png", style: "max-height: 35px;").html_safe, root_path %>
                    </li>
                    <li class = "small-3 medium-2 column top-bar-links text-center"><%= link_to t(:about), about_path %></li>
                    <li class = "small-3 medium-3 column top-bar-links text-center"><%= link_to "RealCraft 190", realcraft_190_path %></li>
                    <li class = "small-3 medium-3 column top-bar-links text-center"><%= link_to "RealCraft 200", realcraft_200_path %></li>
                    <li class = "small-3 medium-2 column top-bar-links text-center"><%= link_to t(:contacts), contacts_path %></li>
                  </ul>
                </div>
          </div>
      </div>
    <%= yield %>
  </body>
</html>
