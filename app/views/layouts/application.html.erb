<!DOCTYPE html>
<html>
  <head>
    <title><%= @title.blank? ? t(:default_title) : @title %></title>
    <meta name = 'description' content = '<%= @meta_content.nil? ? t(:default_meta_description) : @meta_content %>' >
    <meta name = 'keywords' content = '<%= @meta_keywords.nil? ? t(:default_meta_keywords)  : @meta_keywords %>' >
    <meta property="og:title" content="<%= @title.blank? ? t(:default_title) : @title %>">
    <meta property="og:image" content="<%= @page_image.nil? ? '/slider/rc200/4_slider_small.jpg' : @page_image %>">
    <meta property="og:description" content="<%= @meta_content.nil? ? t(:default_meta_description) : @meta_content %>">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
      <script> 
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){ 
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o), 
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m) 
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga'); 

      ga('create', 'UA-98011229-1', 'auto'); 
      ga('send', 'pageview'); 

      </script>
      <!-- Yandex.Metrika counter -->
      <script type="text/javascript">
          (function (d, w, c) {
              (w[c] = w[c] || []).push(function() {
                  try {
                      w.yaCounter42383514 = new Ya.Metrika({
                          id:42383514,
                          clickmap:true,
                          trackLinks:true,
                          accurateTrackBounce:true,
                          webvisor:true
                      });
                  } catch(e) { }
              });

              var n = d.getElementsByTagName("script")[0],
                  s = d.createElement("script"),
                  f = function () { n.parentNode.insertBefore(s, n); };
              s.type = "text/javascript";
